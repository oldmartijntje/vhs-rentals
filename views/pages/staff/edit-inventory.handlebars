<div class="container mt-5">
	<h1 class="mb-4">Edit Inventory</h1>

	<!-- Add Inventory Form -->
	<form id="add-inventory-form" class="mb-4">
		<div class="row g-2 align-items-end">
			<div class="col-md-4">
				<label for="store_id" class="form-label">Store ID</label>
				<input type="number" id="store_id" class="form-control" required>
			</div>
			<div class="col-md-4">
				<button type="submit" class="btn btn-success">Add Inventory</button>
			</div>
		</div>
	</form>

	<!-- Inventory Table -->
	<h4>Inventory of <a id="filmName"></a></h4>
	<table class="table table-striped" id="inventory-table">
        <thead>
            <tr>
                <th>Inventory ID</th>
                <th>Store Id</th>
                <th>Store Address</th>
                <th>Currently Rented Out</th>
				<th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
	</table>

	<!-- Edit Store Modal -->
	<div class="modal fade" id="editStoreModal" tabindex="-1" aria-labelledby="editStoreModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="editStoreModalLabel">Edit Store for Inventory Item</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form id="edit-store-form">
						<input type="hidden" id="edit-inventory-id">
						<div class="mb-3">
							<label for="edit-store-id" class="form-label">New Store ID</label>
							<input type="number" id="edit-store-id" class="form-control" required>
						</div>
						<button type="submit" class="btn btn-primary">Save</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="/static/scripts/helper/youAreNotStaff.js"></script>
<script src="/static/scripts/staff/edit-inventory.js"></script>